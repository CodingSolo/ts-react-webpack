{
  "name": "ts-react-webpack",
  "version": "0.1.0",
  "description": "react application with typescript, webpack, babel",
  "main": "dist/bundle.js",
  "scripts": {
    "type-check":  "./node_modules/.bin/tsc --noEmit && ./node_modules/.bin/eslint --ext ts,tsx ./src",
    "type-check-watch": "yarn type-check --watch",
    "start": "webpack serve --config webpack.dev.js --progress --color",
    "build": "webpack --config webpack.prod.js --progress --color --mode production",
    "test": "jest",
    "test:watch": "jest --watch",
    "cypress:open": "cypress open"
  },
  "jest": {
    "transform": {
      "**/__tests__/**/*.[jt]s?(x)": "babel-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.[jt]s?(x)": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [
    "typescript",
    "react",
    "webpack",
    "babel"
  ],
  "author": "CodingSolo",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.2.0",
    "cypress": "^7.1.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.1",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.32.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.2.4"
  },
  "resolutions": {
      "lodash": "^4.17.19",
      "http-proxy": "^1.18.1",
      "node-forge": "^0.10.0",
      "serialize-javascript": "^3.1.0"
  }
}
