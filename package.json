{
  "name": "ts-react-webpack",
  "version": "0.1.0",
  "description": "react application with typescript, webpack, babel",
  "main": "dist/bundle.js",
  "scripts": {
    "type-check": "tsc --noEmit && eslint --ext ts,tsx ./src",
    "type-check-watch": "yarn type-check --watch",
    "start": "webpack-dev-server --config webpack.dev.js --progress --colors --open  --hot --mode development",
    "build": "webpack --config webpack.prod.js --progress --colors --mode production",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "transform": {
      "**/__tests__/**/*.[jt]s?(x)": "babel-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.[jt]s?(x)": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [
    "typescript",
    "react",
    "webpack",
    "babel"
  ],
  "author": "CodingSolo",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@testing-library/react": "^10.0.1",
    "@types/jest": "^25.1.4",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.3.2",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "style-loader": "^1.0.1",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.4",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "typescript": "^3.8.3"
  }
}
